<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.foodplanner.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            app:popUpTo="@id/nav_graph"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"


        android:name="com.example.foodplanner.authentication.presentation.LoginFragment"
        android:label="fragment_login"

        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mealsFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            app:popUpTo="@id/nav_graph"
            />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.foodplanner.authentication.presentation.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up"

        />
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.foodplanner.boarding.presentation.categories.CategoriesFragment"
        android:label="CategoriesFragment"
        tools:layout="@layout/fragment_categories"
        >
        <action
            android:id="@+id/action_categoriesFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment"
            app:enterAnim="@anim/transitionin"
            app:exitAnim="@anim/transitionout"
            />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.foodplanner.boarding.presentation.favourites.FavouritesFragment"
        android:label="FavouritesFragment"
        tools:layout="@layout/fragment_favourites"
        >
        <action
            android:id="@+id/action_favouritesFragment_to_allergiesFragment"
            app:destination="@id/allergiesFragment"
            app:enterAnim="@anim/transitionin"
            app:exitAnim="@anim/transitionout"
            />
    </fragment>
    <fragment
        android:id="@+id/allergiesFragment"
        android:name="com.example.foodplanner.boarding.presentation.allergies.AllergiesFragment"
        android:label="AllergiesFragment"
        tools:layout="@layout/fragment_allergies"
        />
    <fragment
        android:id="@+id/mealsFragment"
        android:name="com.example.foodplanner.meals.controller.MealsFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_meals" >
        <action
            android:id="@+id/action_mealsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mealsFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.foodplanner.meals.controller.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.foodplanner.meals.controller.MealDetailsFragment"
        android:label="MealDetailsFragment"
        tools:layout="@layout/fragment_meal_details"
        >
        <argument
            android:name="transitionName"
            app:argType="string" />
        <argument
            android:name="meal"
            app:argType="com.example.foodplanner.data.dto.Meal" />
    </fragment>
</navigation>